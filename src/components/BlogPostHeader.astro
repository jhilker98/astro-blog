---
const { title, pubDate } = Astro.props;
import { Icon } from "astro-icon";

import { formatDate } from "@lib/utils";
---

<header class="align-baseline">
  <h1>{title}</h1>
  <Icon name="mdi:calendar" class="w-5 mb-1 inline-block" />
  <span class="font-bold">Posted:</span>
  <time class="inline">
    {formatDate(pubDate)}
  </time>
</header>
@lib/utils