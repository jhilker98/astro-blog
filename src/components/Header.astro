---
import { NAV_LINKS } from "@lib/utils";
import { Icon } from "astro-icon";
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header class="z-10 items-center grid-in-header bg-secondary">
  <nav class="ml-4 flex items-center space-x-4">
    {
      NAV_LINKS.map((link) => (
        <a
          href={link.href}
          class="bg-transparent text-branding-text h-full p-4 hover:bg-accent transition-colors duration-100 border-0 font-sans"
        >
          {link.name}
        </a>
      ))
    }
  </nav>
</header>
